
@using WebApplication1.Models
@model IEnumerable<Task>

<div class="card-header">
    Список задач
</div>
<div class="card-body">
    <table class="table table-striped table-sm">
        <thead>
            <tr> <th>№</th><th>Описание</th><th>Приоритет</th><th>Срок выполнения</th><th>Выполнено</th></tr>
        </thead>
        <tbody>
            @foreach (Task task in Model)
            {
            <tr>
                <td>@task.Id</td>
                <td>@task.Description</td>
                <td>@task.Priority</td>
                <td>@task.Deadline</td>
                <td>@task.State</td>
                <td>
                    @Html.ActionLink("Удалить", "Delete", new {id=task.Id },new {@class ="btn btn-primary"
            })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>



